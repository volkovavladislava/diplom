<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/listItemStatisticMarkButton"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="20dp"
        android:text="Показатель"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bthMatchFavoriteStatisticMarks"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/baseline_favorite_24_grey"
        android:foreground="@drawable/baseline_favorite_24_grey"
        app:layout_constraintBottom_toBottomOf="@+id/listItemStatisticMarkButton"
        app:layout_constraintEnd_toEndOf="@+id/listItemStatisticMarkButton"
        app:layout_constraintTop_toTopOf="@+id/listItemStatisticMarkButton" />

</androidx.constraintlayout.widget.ConstraintLayout>